@page

@using Infrastructure.Settings
@using Microsoft.Extensions.Options

@model Server.Pages.Learn03Model
@inject IOptions<AdminSettings> adminSettingsOptions

@{
	var adminSettings =
		adminSettingsOptions.Value;
}

<h3>
	Learn 3
</h3>

<hr />

Age: @(adminSettings.Age)
<br />
Is Active: @(adminSettings.IsActive)
<br />
Salary: @(adminSettings.Salary)
<br />
Full Name: @(adminSettings.FullName)
<br />
Favorite Colors:
@if (adminSettings.FavoriteColors != null)
{
	foreach (var item in adminSettings.FavoriteColors)
	{
		@(item)
		@:&nbsp;
	}
}

<hr />
